  country: "Japan",
  city: "Tokyo",
  occupation: "Software Engineer",
  hobbies: ["Programming", "Reading"],
  languages: ["Japanese", "English"],
};

const sns = [
  {
    name: "Twitter",
    url: "https://twitter.com/ooooonse0524",
    icon: "https://cdn.svgporn.com/logos/twitter.svg",
  },
  {
    name: "GitHub",
    url: "https://github.com/ooooose",
    icon: "https://cdn.svgporn.com/logos/github-icon.svg",
  },
];

const skills = [
  {
    name: "JavaScript",
    icon: "https://cdn.svgporn.com/logos/javascript.svg",
  },
  {
    name: "TypeScript",
    icon: "https://cdn.svgporn.com/logos/typescript-icon.svg",
  },
  {
    name: "Python",
    icon: "https://cdn.svgporn.com/logos/python.svg",
  },
  {
    name: "FastAPI",
    level: "Advanced",
    icon: "https://cdn.worldvectorlogo.com/logos/fastapi-1.svg",
  },
  {
    name: "React",
    icon: "https://cdn.svgporn.com/logos/react.svg",
  },
  {
    name: "Next.js",
    icon: "https://cdn.svgporn.com/logos/nextjs.svg",
  },
  {
    name: "Docker",
    icon: "https://cdn.svgporn.com/logos/docker-icon.svg",
  },
  {
    name: "AWS",
    icon: "https://cdn.svgporn.com/logos/aws.svg",
  },

  {
    name: "Firebase",
    icon: "https://cdn.svgporn.com/logos/firebase.svg",
