---

<Layout title={pageTitle}>
  <img src="/Icon.png" alt="おーせのロゴ" class='profile-icon' />
  <h2>おーせのテックブログ</h2>
  <h3>SNS</h3>
  <ul class="sns-icon-ul">
    {
      sns.map((s) => (
        <li class="sns">
          <a href={s.url} target="_blank" rel="noopener noreferrer">
            <img src={s.icon} alt={s.name} class="sns-icon" />
          </a>
        </li>
      ))
    }
  </ul>
  <h3>Skills</h3>
  <ul class="skill-index">
    {
      skills.map((skill) => (
        <li class="skill">
          <img src={skill.icon} alt={skill.name} class="lang-icon" />
        </li>
      ))
    }
  </ul>
</Layout>

<style>
  .profile-icon {
     width: 100px;
     height: 100px;
  }
  .skill-index {
    display: flex;
    flex-description: wrap;
    gap: 20px
  }
  .skill {
    list-style: none;
  }
  .sns {
    list-style: none;
  }
  .sns-icon-ul {
    display: flex;
    gap: 20px
  }
  img {
    width: 200px;
    height: 200px;
  }
  .lang-icon {
    width: 100px;
    height: 100px;
  }
  .Advanced {
    color: red;
  }
  .Intermediate {
    color: blue;
  }
  .sns-icon {
    width: 50px;
    height: 50px;
  }
</style>
